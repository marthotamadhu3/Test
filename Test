data "external" "pgadmin_ip" {
  program = [
    "bash", "-c",
    "kubectl get ingress pgadmin-ingress -n my-namespace -o jsonpath='{.status.loadBalancer.ingress[0].ip}'"
  ]
}

resource "azurerm_private_dns_a_record" "pgadmin_dns" {
  name                = "pgadmin"
  zone_name           = var.dns_zone_name
  resource_group_name = var.resource_group_name
  ttl                 = 300
  records             = [data.external.pgadmin_ip.result]
}
